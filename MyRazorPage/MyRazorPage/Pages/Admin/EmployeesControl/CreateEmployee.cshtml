    Layout = "_Layout2";
}
<div id="content">
    <div id="content-left">
        <ul>
            <a asp-page="/Admin/Dashboard">
            <li>Dashboard</li>  </a>
            <a asp-page="/Admin/Order/AllOrder">
            <li>Orders</li></a>
            <a asp-page="/Admin/Product/AllProduct">
            <li>Products</li></a>
