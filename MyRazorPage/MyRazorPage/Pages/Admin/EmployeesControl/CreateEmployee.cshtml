                    <span class="msg-error" asp-validation-for="EmployeeEdit.BirthDate"></span><br />

                    <label>Hiredate:</label><br />
                    <input asp-for="EmployeeEdit.HireDate"><br />
                    <span class="msg-error" asp-validation-for="EmployeeEdit.HireDate"></span><br />

                    <label>Address:</label><br />
                    <input asp-for="EmployeeEdit.Address"><br />
                    <span class="msg-error" asp-validation-for="EmployeeEdit.Address"></span><br />

                    <input type="submit" value="Save" />
                </div>
